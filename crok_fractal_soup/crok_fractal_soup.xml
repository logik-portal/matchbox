Matchbox version by ivar@inferno-op.com" Name="crok fractal soup">
   <Shader OutputBitDepth="Output" Index="1">
      <Uniform ResDependent="None" Max="1000000.0" Min="-1000000.0" Default="1.13" Inc="0.01" Tooltip="" Row="0" Col="0" Page="0" DisplayName="Speed" Type="float" Name="Speed">
      </Uniform>
      <Uniform ResDependent="None" Max="10.0" Min="0.0" Default="3.8" Inc="0.01" Tooltip="" Row="1" Col="1" Page="0" DisplayName="Gain" Type="float" Name="gain">
      </Uniform>
      <Uniform ResDependent="None" Max="1000000.0" Min="-1000000.0" Default="3.49" Inc="0.1" Tooltip="" Row="1" Col="0" Page="0" DisplayName="Offset" Type="float" Name="time">
      </Uniform>
      <Uniform Max="100" Min="0" Default="48" Inc="1" Tooltip="" Row="2" Col="0" Page="0" DisplayName="Detail" Type="int" Name="detail">
      </Uniform>
      <Uniform Inc="0.01" Tooltip="" Row="0" Col="1" Page="0" DisplayName="Colour" ValueType="Colour" Type="vec3" Name="vBaseColour">
         <SubUniform ResDependent="None" Max="5.0" Min="0.0" Default="0.232">
         </SubUniform>
         <SubUniform ResDependent="None" Max="5.0" Min="0.0" Default="0.48">
         </SubUniform>
         <SubUniform ResDependent="None" Max="5.0" Min="0.0" Default="0.64">
         </SubUniform>
      </Uniform>
   </Shader>
   <Page Name="Fractal Soup" Page="0">
      <Col Name="Structure" Col="0" Page="0">
      </Col>
      <Col Name="Colour" Col="1" Page="0">
      </Col>
   </Page>
